mixin block--head(subtitle, title, caption)
  .block--head
    .block--head_subtitle
      p=subtitle
    .block--head_title
      h2.f-h2= title
    .block--head_caption
      p=caption
    .block--actions
      a(href="/").button.button-filled.button-accent.button-dark
        span Действие
      a(href="/").button.button-filled.button-primary
        span Переход

